<!DOCTYPE html>
<html>
    <body>
        <h1> Hello </h1>
        <%= form_tag articles_path, method: :get, local: true do %>
            <%= text_field_tag :search, params[:search] %>
            <%= submit_tag "Search" %>
        <% end %>
        <h2> Make a new article </h2>
        <%= link_to "New Article", new_article_path %> 
        <h2> Search Results </h2>
        <div>
            <table>
                 <h3> Table Of Articles </h2>
                </tr>
                    <th> Title </th>
                    <th> Author </th>
                    <th> Date Published </th>
                    <th> Content </th>
                    <th> Edit </th>
                    <th> Delete </th>
                </tr>
                    <% @articles.each do |article| %>
                        <tr>
                            <th><%= article.title %></th>
                            <th><%= article.author %></th>
                            <th><%= article.date %></th>
                            <th><%= link_to "Content", article_path(article) %></th>
                            <th><%= link_to "Edit", edit_article_path(article) %></th>
                            <th><%= link_to "Destroy", article, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %></th>
                        </tr>
                    <% end %>
            </table>
        </div>
    </body>
</html>

